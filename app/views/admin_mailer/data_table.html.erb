<html>
  <head>
    <title>Data Mail</title>
    <style>
      table { 
        border-collapse: collapse; 
        border: 1px solid black;}
      
      table tr th, table tr td {
        border: 1px solid black;
        vertical-align: top;
        text-align: left;
        padding: 3px;
      }
    </style>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    Thank you for testing

    <table class="listing" summary="Users list">
      <tr class="header">
        <th>ID</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Phone</th>
      </tr>
      <% @subs.each do |u| %>
      <tr>
        <td><%= u.id%></td>
        <td><%= u.name%></td>
        <td><%= u.email %></td>
        <td ><%= u.phone %></td>
      </tr>
      <% end %>
    </table>
  </body>
</html>
